{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Open in Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": "Start (Build + Serve)"
		},
		{
			"name": "Open in Edge",
			"type": "msedge",
			"request": "launch",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": "Start (Build + Serve)"
		},
		{
			"name": "Attach to Chrome",
			"type": "chrome",
			"request": "attach",
			"port": 9222,
			"webRoot": "${workspaceFolder}"
		}
	]
}
